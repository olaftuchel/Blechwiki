<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/posaunote"
        android:label="@string/app_name"
        android:launchMode="singleTask"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.redderei.Blechwiki.MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.redderei.Blechwiki.ActivityDetail"
            android:parentActivityName="org.redderei.Blechwiki.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.redderei.Blechwiki.MainActivity"/>
        </activity>
        <activity
            android:name="org.redderei.Blechwiki.BuchDetailActivity"
            android:parentActivityName="org.redderei.Blechwiki.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.redderei.Blechwiki.MainActivity"/>
        </activity>
        <activity
            android:name="org.redderei.Blechwiki.About"
            android:parentActivityName="org.redderei.Blechwiki.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.redderei.Blechwiki.MainActivity"/>
        </activity>
    </application>

</manifest>
